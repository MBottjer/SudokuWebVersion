<html>
<head>
  <title>Sudoku Game</title>
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
  <link href='http://fonts.googleapis.com/css?family=IM+Fell+English+SC' rel='stylesheet' type='text/css'>
</head>
<body>
  <h1>Sudoku&nbsp::&nbspChallenge</h1>
  <div id="flash">
  <%= flash[:notice] %>
  </div>
  <div id="sudoku">
    <form action="/" method="post">
    <% 3.times do |row| %>
      <div class='row'>
    <% 3.times do |box| %>
      <div class="box">
    <% 3.times do |cell_row| %>
      <div class="cell-row">
        <% 3.times do |cell| %>
           <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
           <% end %>
         </div>
       <% end %>
     </div>
   <% end %> 
 </div>
<% end %>
<button id='check'>Check Solution</button>
</form>
<form action="/new_game" method="get">
  <button id='new'>Easy Game</button>
</form>
<form action="/solution" method="get">
  <button id='solution'>Solution</button>
</form>
<form action="/medium_game" method="get">
  <button id='medium'>Medium Game</button> 
</form>
<form action="/hard_new_game" method="get">
  <button id='hard'>Hard Game</button> 
</form>
<form action="/reset" method="get">
  <button id='reset'>Reset</button> 
</form>
</div>
</body>
</html>